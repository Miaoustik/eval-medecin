{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="secondTitle mb-3">Me contacter</h2>

    {% include '_flashes.html.twig' %}


    <p class="textNoto">Vous pouvez me contacter par message{% if not app.user %} en sp√©cifiant votre adresse mail{% endif %}.</p>
    <form method="post">

        {# honeypot for bots #}
        <input class="input" type="text" name="name" />

        {%  if not app.user %}
            <label class="secondTitle" for="emailInput" >Email :</label>
            <input required name="email" class="mb-4 form-control shadow1 inputStyle" id="emailInput" type="email" placeholder="Votre addresse email ..."/>
        {% endif %}
        <label class="secondTitle" for="emailInput " >Message :</label>
        <textarea required name="message" class="form-control shadow1 inputStyle" id="emailInput"  rows="10" placeholder="Votre message ..."></textarea>
        <input type="hidden" value="{{ csrf_token('contact') }}" name="_token">
        <button class="btn btn-primary text-white w-100 mt-4 shadow1">Envoyer</button>
    </form>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('contact') }}
{% endblock %}
