{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="secondTitle text-secondary mb-4">GÃ©rer les allergies.</h2>

    {% include '_flashes.html.twig' %}

    <ul class="p-0 list-unstyled">
        {% for allergen in items %}
            <li class="lastBorder border-top border-primary ps-1">
                <div class="d-flex align-items-center">
                    <p class="roundedSquare pt-3 textNoto">
                        {{ allergen.name }}
                    </p>
                    <a href="{{ path('admin_modifyAllergen_index', {'id': allergen.id}) }}" class="ms-auto btn btn-primary text-white">Modifier</a>
                    <form action="{{ path('admin_modifyAllergen_delete', {'id': allergen.id}) }}" method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('deleteAllergen') }}" />
                        <button class="ms-2 btn btn-secondary text-white" type="submit" >Supprimer</button>
                    </form>
                </div>
            </li>
        {% endfor %}
    </ul>
    {% include '_pagination.html.twig' with {currentPage, pageNumber, paginationPath} %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('recipes') }}
{% endblock %}